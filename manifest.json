{
    "manifest_version": 2,
    "name": "Facebook Comment Chooser",
    "version": "1.0",
    "description": "A comment chooser for facebook",
    "browser_action": {
	"default_icon": "icon.png"
    },
    "background": {
	"scripts": ["background.js"]
    },
    "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
